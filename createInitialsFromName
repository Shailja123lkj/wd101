let createInitialsFromName=(name) =>{
                               // Split the name by spaces
    let words = name.trim().split(" ");

                              // If there's only one word, return the first two letters of the word in uppercase
         if (words.length === 1) {
                  return words[0].substring(0, 2).toUpperCase();
               }

                            // If there are two words, return the first letter of each in uppercase
         if (words.length === 2) {
               return (words[0][0] + words[1][0]).toUpperCase();
             }

                   // If there are more than two words, return the first letter of the first word
                      // and the first letter of the last word in uppercase
     return (words[0][0] + words[words.length - 1][0]).toUpperCase();
};
let name = Ritti;
printcreateInitialsFromName(name);
let name = Joe Don;
printcreateInitialsFromName(name);
let name = joe leo Don;
printcreateInitialsFromName(name);
module.exports = createInitialsFromName;

